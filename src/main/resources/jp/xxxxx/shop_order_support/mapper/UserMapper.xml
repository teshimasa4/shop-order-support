<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="jp.xxxxx.shop_order_support.mapper.UserMapper">
	<resultMap id="UserResult" type="jp.xxxxx.shop_order_support.entity.User">
		<result column="user_cd" property="userCd" />
		<result column="password" property="password" />
		<result column="name" property="name" />
		<result column="shop_cd" property="shopCd" />
	</resultMap>

	<select id="findAll" resultMap="UserResult">
		select user_cd, password, name, shop_cd
		from m_user
	</select>
</mapper>